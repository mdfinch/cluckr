<%- include('../partials/header.ejs') %>

<div class="container border border-drk">
    <h1>Content</h1>
    <form action="/clucks" method="POST">
        <div class="form-group">
            <textarea name="content" class="form-control" placeholder="Whatchoo cluckn' about?"></textarea>
        </div>
    <h2>Image URL</h2>
        <div class="form-group">
            <input type="url" class="form-control" name="image_url" placeholder="e.g. http://yourimageUrl.com" />
        </div>

        <div class="form-group">
            <input type="hidden" class ="form-control" name="username" value="<%= loggedInUserName %>" >
        </div>

        <input type="submit" class="btn btn-outline-success" value="Submit" style="margin: 1rem;" />
    </form>
</div>
<%- include('../partials/footer.ejs') %>