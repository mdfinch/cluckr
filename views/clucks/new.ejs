<%- include('../partials/header.ejs') %>

<div class="container">
    <h1>New Cluck</h1>

    <form action="/clucks" method="POST">
        <div class="form-group">
            <input type="url" class="form-control" name="image_url" placeholder="e.g. http://yourimageUrl.com" />
        </div>

        <div class="form-group">
            <textarea name="content" class="form-control" placeholder="Enter the content of your cluck"></textarea>
        </div>
        <div class="form-group">
            <input type="hidden" class ="form-control" name="username" value="<%= loggedInUserName %>" >
        </div>

        <input type="submit" class="btn btn-outline-success" value="Submit" />
    </form>
</div>
<%- include('../partials/footer.ejs') %>