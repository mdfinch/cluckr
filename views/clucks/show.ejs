<%- include('../partials/header.ejs') %>
<div class="container">
    <h1>Clucks</h1>
    <div class="card mb-4">
        <div>
            <% if(cluck.image_url) { %> 
                <img src="<%= cluck.image_url %>" class="rounded float-left" alt="icon" width="20%"  style="margin: 2%;">
            <% } else { %> 
                <img src="/images/crossout.png" alt="no_icon" width="20%">
            <% } %> 
        </div>

        
        <div class="card body">            
            <div class="card-text" style="margin: 1rem; font-size: 2rem;">
            <%= cluck.content %>
            </div>
                <div>Created by <%= cluck.username %> </div>
                <div><em>Clucked at <%= new Date(cluck.created_at).toLocaleString() %> </em></div>
                <div><em>Updated at <%= new Date(cluck.updated_at).toLocaleString() %> </em></div>
            </p>

            <div class="d-flex">
                <a href="/clucks/<%= cluck.id %>/edit" class="btn btn-outline-success mr-2">
                    Edit
                </a>
            </div>
            <form method="POST" action="/clucks/<%= cluck.id %>" >
                <input type="hidden" name="_method" value="DELETE" />
                <input type="submit" class="btn btn-outline-danger" value="Delete" />
            </form>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>