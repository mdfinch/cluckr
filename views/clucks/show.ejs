<%- include('../partials/header.ejs') %>
<div class="container border border-dark">
    <div class="card mb-4  border-dark" style="margin: 1rem;">
        <div class="card body d-inline">
            <h3 class="card-text d-inline"><%= cluck.username %> </h3>
            <span><em>Clucked at <%= new Date(cluck.created_at).toLocaleString() %> </em></span>
        </div>
        <div>
            <h4 class="card-text"><%= cluck.content %> </h4>
        </div>
        <div>
            <% if(cluck.image_url) { %>
            <img src="<%= cluck.image_url %>" class="rounded float-left" alt="icon" width="40%" style="margin: 2%;">
            <% } else { %>
            <img src="/images/crossout.png" alt="no_icon" width="40%">
            <% } %>
        </div>
    </div>

    <%if(loggedInUserName == cluck.username) { %>
    <div class="d-flex" style="margin: 1rem;">
        <a href="/clucks/<%= cluck.id %>/edit" class="btn btn-outline-success mr-2">
            Edit
        </a>
        <form method="POST" action="/clucks/<%= cluck.id %>">
            <input type="hidden" name="_method" value="DELETE" />
            <input type="submit" class="btn btn-outline-danger" value="Delete" />
        </form>
    </div>
    <% } %>
</div>
</div>
</div>
<%- include('../partials/footer.ejs') %>